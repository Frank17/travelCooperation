/* pages/me/me.wxss */

@import '../../app.wxss';
page {
  width: 100%;
  height: 100%;
}
.container {
  height: 100%;
  display: flex;
  display: -webkit-flex;
}

.user-info-row {
  display: flex;
  display: -webkit-flex;
  height: 220rpx;
  width: 100%;
  /* background-color: #FAFAFA; */
  border-bottom: 1px solid #EEEEEE;
  box-sizing: border-box;
}

.user-info-row .user-info-face {
  width: 160rpx;
  height: 160rpx;
  margin-right: 24rpx;
  margin-left: 8rpx;
  margin-top: 15rpx;
}

.user-info-detail {
  display: flex;
  display: -webkit-flex;
  flex: 1;
  flex-direction: column;
  justify-content: center;
}

.user-info-nickname {
  margin-bottom: 16rpx;
}

.user-info-edit {
  color: #BDBDBD;
  font-size: 32rpx;
}

.user-info-row-hover {
  background: rgba(0, 0, 0, 0.1);
}

.cells-group-container {
  width: 100%;
  height: 100%;
}

.cells-group-container-first {
  margin-top: 16rpx;
}

.activity-cells-container {
  width: 100%;
}

