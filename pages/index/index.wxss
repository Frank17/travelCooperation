/**index.wxss**/
@import '../../icons/fonts/ionicons.wxss';
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.search-container {
  width: 100%;
}

.sort-row {
  width: 100%;
  margin-bottom: 16rpx;
}

.sort-cell {
  width: 80%;
}

.activity-area {
  width: 100%;
  margin-top: 4rpx;
}

.publish-button {
  position: fixed;
  right: 20rpx;
  bottom: 100rpx;
  z-index: 50000;
  background: #6200ee;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  color: #fff;
}

.publish-button-hovered {
  background: #3700b3;
}

.button-icon {
  position: absolute;
  z-index: 50001;
  width: 46rpx;
  height: 46rpx;
  left: 27rpx;
  top: 27rpx;
}